.container {
  font-size: 11px;
}
.userinfo {
  background-color: #f62a94;
  display: flex;
  flex-direction: row;
  height: 240rpx;
  width: 100%;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0 30rpx;
}
.userinfo-nickname {
  font-size: 12px;
  color: white;
}
.join {
  color: #f9acd4;
  font-size: 10px;
  background-color: #470d22;
  border-radius: 20rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}
.join image {
  height: 40rpx;
  width: 40rpx;
}
.userdiv {
  width: 92%;
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 25rpx;
}
#div1 {
  margin-top: -90rpx;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
  align-items: center;
  font-size: 11px;
}
#div1 .num {
  color: #f62a94;
  font-size: 13px;
  font-weight: bold;
}
.div1 {
  font-size: 12px;
  font-weight: bold;
  padding: 15rpx 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e6e6e6;
}
.div1 image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.div2 {
  display: flex;
  flex-direction: row;
}
.div2 .div3 {
  display: flex;
  flex-direction: column;
  padding: 15rpx 40rpx;
  align-items: center;
}
.div2 .div3 image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  padding: 10rpx;
}

