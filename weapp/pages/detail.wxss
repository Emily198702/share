.container {
  padding: 30rpx 30rpx 0 30rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}
.userdiv {
  width: 100%;
  display: flex;
  flex-direction: row;
}
.userdiv image {
  width: 110rpx;
  height: 110rpx;
  margin-right: 25rpx;
}
.userdiv .nickname {
  color: #39a2bb;
  font-size: 32rpx;
}
.userdiv .location {
  font-size: 26rpx;
  color: #39a2bb;
  margin: 10rpx 0;
}
.userdiv .location image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
}
.goodsdiv {
  border-top: 1px solid #dcdcdc;
  width: 100%;
}
.goodsdiv .desc {
  font-size: 32rpx;
  margin: 10rpx 0;
}
.goodsdiv .other1 {
  margin: 10px 0;
  display: flex;
  align-items: center;
  color: #606060;
  font-size: 26rpx;
}
.goodsdiv .other1 image {
  width: 38rpx;
  height: 38rpx;
  margin: 0 10rpx;
}
.goodsdiv .other1 .num {
  color: #39a2bb;
}
.time {
  margin: 8px 0;
  padding: 0 30rpx;
  background-color: white;
  font-size: 24rpx;
  margin-bottom: 50px;
}
.time .div1 {
  display: flex;
  flex-direction: row;
  color: #636363;
  padding: 10rpx 0;
  border-bottom: 1px solid #dcdcdc;
}
.time .div2 {
  color: lightsalmon;
  padding: 10rpx 0;
}
.opdiv {
  position: fixed;
  bottom: 0;
  width: 100%;
  font-size: 11px;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.opdiv .div1 {
  display: flex;
  flex-direction: column;
  padding: 0 50rpx;
  align-items: center;
}
.opdiv .div1 image {
  width: 40rpx;
  height: 40rpx;
}
.opdiv .div1 button {
  background-color: white;
  padding: 0;
  width: 40rpx;
  height: 40rpx;
  line-height: 0;
}
.opdiv .div1 button:after {
  border: none;
}
.opdiv .div2 {
  width: 36%;
  height: 40px;
  font-size: 12px;
  color: white;
  background-color: #f62a94;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

