.map_container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
}
.map {
  width: 100%;
  height: 100%;
}
.map_text {
  height: 80px;
  background: #fff;
  padding: 0 15px;
}
text {
  margin: 5px 0;
  display: block;
  font-size: 12px;
}
.list {
  margin-top: 300rpx;
  background-color: white;
  width: 100%;
  font-size: 12px;
}
.address {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 1px solid lightgray;
}
.address image {
  width: 40rpx;
  height: 40rpx;
}

